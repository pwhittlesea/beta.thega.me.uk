{{- $pages := .Site.RegularPages -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
{{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<feed xmlns="http://www.w3.org/2005/Atom">
  <generator uri="https://jekyllrb.com/" version="4.4.1">Jekyll</generator>
  <link href="{{ .Permalink }}" rel="self" type="application/atom+xml"/>
  <link href="{{ $.Site.BaseURL }}" rel="alternate" type="text/html"/>
{{- if not .Date.IsZero }}
  <updated>{{ .Date.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</updated>
{{- end }}
  <id>{{ .Permalink }}</id>
  <title type="html">{{ .Site.Title }}</title>
  <subtitle>{{ .Site.Params.Description }}</subtitle>
{{- with .Site.Params.Author.name }}
  <author>
    <name>{{.}}</name>
{{- with $.Site.Params.Author.email }}
    <email>{{.}}</email>
{{- end }}
  </author>
{{- end -}}
{{- range $pages -}}
{{- $pageLink := .Permalink -}}
{{- if eq (.Aliases | len) 1 -}}
{{- $pageLink = absURL (index .Aliases 0) -}}
{{- end }}
  <entry>
    <title type="html">{{ .Title }}</title>
    <link href="{{ $pageLink }}" rel="alternate" type="text/html" title="{{ .Title }}"/>
    <published>{{ .Date.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</published>
    <updated>{{ .Lastmod.Format "2006-01-02T15:04:05-07:00" | safeHTML }}</updated>
    <id>{{ strings.TrimSuffix "/" $pageLink }}</id>
{{- if .Content }}
    <content type="html" xml:base="{{ $pageLink }}">{{ `<![CDATA[` | safeHTML }}{{ .Content }}]]></content>
{{- end }}
{{- with .Site.Params.Author.name }}
    <author>
      <name>{{.}}</name>
{{- with $.Site.Params.Author.email }}
      <email>{{.}}</email>
{{- end }}
    </author>
{{- end }}
{{- range .GetTerms "categories" }}
    <category term="{{ lower .LinkTitle }}"/>
{{- end }}
{{- range .GetTerms "tags" }}
    <category term="{{ lower .LinkTitle }}"/>
{{- end }}
{{- if .Summary }}
    {{ `<summary type="html"><![CDATA[` | safeHTML }}{{ .Summary | plainify | chomp }}]]></summary>
{{- end }}
  </entry>
{{- end }}
</feed>
